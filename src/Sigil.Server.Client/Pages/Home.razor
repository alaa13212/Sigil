@page "/"
@attribute [Authorize]
@using Sigil.Application.Models.Projects
@inject IProjectService ProjectService
@inject NavigationManager Navigation


<PageTitle>سجل</PageTitle>

@if (loading)
{
    <div class="flex items-center justify-center h-64">
        <span class="loading loading-spinner loading-lg"></span>
    </div>
}
else if (Projects is null || Projects.Count == 0)
{
    <div class="flex flex-col items-center justify-center py-16 space-y-4">
        <EmptyState Title="No projects yet" Description="Create a project to get started." />
        <a href="/projects/create" class="btn btn-primary">Create Project</a>
    </div>
}
else if (Projects.Count > 1)
{
    <div class="space-y-4">
        <div class="flex items-center justify-between">
            <h1 class="text-2xl font-bold">Projects</h1>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            @foreach (var project in Projects)
            {
                <a href="/projects/@project.Id/issues" class="card bg-base-200 hover:bg-base-300 transition-colors cursor-pointer">
                    <div class="card-body p-5">
                        <h2 class="card-title text-base">@project.Name</h2>
                        <div class="badge badge-ghost badge-sm">@project.Platform</div>
                        <div class="flex gap-4 mt-2 text-sm opacity-70">
                            <div>
                                <span class="font-mono font-semibold">@project.IssueCount</span> issues
                            </div>
                            <div>
                                <span class="font-mono font-semibold">@project.EventCount</span> events
                            </div>
                        </div>
                    </div>
                </a>
            }
            
            <a href="/projects/create" class="card hover:bg-base-300 transition-colors cursor-pointer border-dashed border-2 border-base-300/50">
                <div class="card-body p-5">
                    <h2 class="card-title text-base items-center"> <span class="text-4xl font-mono">+</span> <span>Create New Project</span></h2>
                </div>
            </a>

            
        </div>
    </div>
}

@code {
    [PersistentState] public List<ProjectOverviewResponse>? Projects { get; set; }
    
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            Projects ??= await ProjectService.GetAllProjectOverviewsAsync();

            if (Projects is { Count: 1 })
            {
                Navigation.NavigateTo($"/projects/{Projects[0].Id}/issues", replace: true);
            }
        }
        catch
        {
            Projects = null;
        }
        finally
        {
            loading = false;
        }
    }
}
