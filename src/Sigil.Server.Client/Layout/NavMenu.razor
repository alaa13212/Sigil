@using Sigil.Application.Models.Projects
@inject IServiceScopeFactory ScopeFactory
@inject NavigationManager NavigationManager
@implements IDisposable

<div class="p-4 border-b border-base-300 space-y-3">
    <a href="/" class="text-2xl text-center font-bold block">سجل</a>
    <div class="flex items-center gap-2 bg-base-300 rounded-lg px-3 py-2 cursor-pointer opacity-70 hover:opacity-100 text-xs"
         onclick="document.dispatchEvent(new KeyboardEvent('keydown', {key:'k', ctrlKey:true, bubbles:true}))">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        <span class="flex-1">Search...</span>
        <span class="opacity-50 font-mono">⇧⇧</span>
    </div>
</div>

<AuthorizeView>
    <Authorized>

        <ul class="menu flex-1 w-full">
            <li class="menu-title">Projects</li>
            @if (_projects is not null)
            {
                @foreach (var p in _projects)
                {
                    ProjectBadgeCounts counts = _badgeCounts.GetValueOrDefault(p.Id) ?? ProjectBadgeCounts.Empty;
                    <li>
                        <NavLink href="@($"/projects/{p.Id}")" Match="NavLinkMatch.Prefix" class="menu-dropdown-toggle" ActiveClass="menu-dropdown-show">@p.Name
                            @if (counts.UnseenIssues > 0 || counts.UnseenReleases > 0)
                            {
                                <span class="badge badge-sm badge-primary">@(counts.UnseenIssues + counts.UnseenReleases)</span>
                            }
                        </NavLink>
                        <ul class="menu-dropdown">
                            <li>
                                <NavLink href="@($"/projects/{p.Id}/issues")" Match="NavLinkMatch.Prefix" ActiveClass="menu-active">
                                    <span class="flex-1">Issues</span>
                                    @if (counts.UnseenIssues > 0)
                                    {
                                        <span class="badge badge-sm badge-primary">@counts.UnseenIssues</span>
                                    }
                                </NavLink>
                            </li>
                            <li>
                                <NavLink href="@($"/projects/{p.Id}/releases")" Match="NavLinkMatch.Prefix" ActiveClass="menu-active">
                                    <span class="flex-1">Releases</span>
                                    @if (counts.UnseenReleases > 0)
                                    {
                                        <span class="badge badge-sm badge-primary">@counts.UnseenReleases</span>
                                    }
                                </NavLink>
                            </li>
                            <li>
                                <NavLink href="@($"/projects/{p.Id}/settings")" Match="NavLinkMatch.Prefix" ActiveClass="menu-active">
                                    Settings
                                </NavLink>
                            </li>
                        </ul>
                    </li>
                }
            }
            <div class="flex-1"></div>

            <li class="menu-title mt-4">Organization</li>
            <li>
                <NavLink href="/teams" Match="NavLinkMatch.Prefix" ActiveClass="menu-active">
                    Teams
                </NavLink>
            </li>
            <AuthorizeView Roles="Admin">
                <Authorized Context="_">
                    <li>
                        <NavLink href="/projects/create" Match="NavLinkMatch.All" ActiveClass="menu-active">
                            Create Project
                        </NavLink>
                    </li>
                </Authorized>
            </AuthorizeView>

            <AuthorizeView Roles="Admin">
                <Authorized Context="_">
                    <li class="menu-title mt-4">Admin</li>
                    <li>
                        <NavLink href="/admin/users" Match="NavLinkMatch.Prefix" ActiveClass="menu-active">
                            Users
                        </NavLink>
                    </li>
                    <li>
                        <NavLink href="/admin/migrations" Match="NavLinkMatch.All" ActiveClass="menu-active">
                            Migrations
                        </NavLink>
                    </li>
                    <li>
                        <NavLink href="/admin/digestion" Match="NavLinkMatch.All" ActiveClass="menu-active">
                            Digestion
                        </NavLink>
                    </li>
                    <li>
                        <NavLink href="/admin/alert-channels" Match="NavLinkMatch.All" ActiveClass="menu-active">
                            Alert Channels
                        </NavLink>
                    </li>
                    <li>
                        <NavLink href="/admin/settings" Match="NavLinkMatch.All" ActiveClass="menu-active">
                            Settings
                        </NavLink>
                    </li>
                </Authorized>
            </AuthorizeView>
        </ul>

        <div class="p-3 border-t border-base-300">
            <div class="text-sm opacity-70 mb-2">@context.User.Identity?.Name</div>
            <a href="/account/passkeys" class="btn btn-ghost btn-sm w-full mb-1">Passkeys</a>
            <form action="/logout" method="post">
                <button type="submit" class="btn btn-ghost btn-sm w-full">Sign Out</button>
            </form>
        </div>
    </Authorized>
</AuthorizeView>

@code {
    private List<ProjectResponse>? _projects;
    private Dictionary<int, ProjectBadgeCounts> _badgeCounts = [];
    
    protected override async Task OnInitializedAsync()
    {
        try
        {
            using var scope = ScopeFactory.CreateScope();
            var projectService = scope.ServiceProvider.GetRequiredService<IProjectService>();
            _projects = await projectService.GetProjectListAsync();

            var badgeService = scope.ServiceProvider.GetRequiredService<IBadgeService>();
            _badgeCounts = await badgeService.GetAllBadgeCountsAsync(Guid.Empty);
            
            NavigationManager.LocationChanged += OnLocationChanged;
        }
        catch
        {
            // Not authenticated or server error
        }
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        foreach (var (projectId, counts) in _badgeCounts)
        {
            if (e.Location.Contains($"projects/{projectId}/issues"))
                counts.UnseenIssues = 0;
            
            if (e.Location.Contains($"projects/{projectId}/releases"))
                counts.UnseenReleases = 0;
        }
        
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }

}
