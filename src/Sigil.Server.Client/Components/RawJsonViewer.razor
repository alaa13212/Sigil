@inject IEventService EventService

@if (loading)
{
    <div class="flex justify-center py-8">
        <span class="loading loading-spinner"></span>
    </div>
}
else if (error is not null)
{
    <div class="alert alert-error text-sm">@error</div>
}
else if (rawJson is not null)
{
    <div class="space-y-2">
        <div class="flex gap-2">
            <CopyButton Text="@rawJson" />
            <a href="@($"events/{EventId}/download")" class="btn btn-ghost btn-xs">Download</a>
            <a href="@($"events/{EventId}/raw")" class="btn btn-ghost btn-xs">Raw</a>
            <a href="@($"events/{EventId}/md")" class="btn btn-ghost btn-xs">Markdown</a>
        </div>
        <pre class="bg-base-300 p-3 rounded text-xs overflow-x-auto overflow-y-auto"><code>@rawJson</code></pre>
    </div>
}

@code {
    [Parameter, EditorRequired]
    public long EventId { get; set; }

    [Parameter]
    public bool AutoLoad { get; set; }

    private string? rawJson;
    private string? error;
    private bool loading;
    private bool loaded;

    protected override async Task OnParametersSetAsync()
    {
        if (AutoLoad && !loaded)
            await Load();
    }

    public async Task Load()
    {
        if (loaded) return;
        loading = true;
        try
        {
            var bytes = await EventService.GetRawEventJsonAsync(EventId);
            if (bytes is not null)
            {
                rawJson = System.Text.Json.JsonSerializer.Serialize(
                    System.Text.Json.JsonDocument.Parse(bytes).RootElement,
                    new System.Text.Json.JsonSerializerOptions { WriteIndented = true });
            }
            else
            {
                error = "Raw event data not available.";
            }
            loaded = true;
        }
        catch (Exception ex)
        {
            error = $"Failed to load raw JSON: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }
}
